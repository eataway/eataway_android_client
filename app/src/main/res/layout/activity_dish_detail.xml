<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.australia.administrator.australiandelivery.activity.DishDetailActivity">
    <ImageView
        android:id="@+id/iv_dish_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/iv_dish_detail_back"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/img_back_icon_white"/>
    <TextView
        android:id="@+id/tv_dish_detail_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dish_detail"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/tv_dish_detail_dish_price"
        android:layout_below="@+id/tv_dish_detail_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:textColor="@color/actionBar"
        android:layout_marginBottom="10dp"/>
    <View
        android:id="@+id/dish_detail_list_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:layout_below="@id/tv_dish_detail_dish_price" />
    <TextView
        android:id="@+id/tv_dish_detail_dish_content"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_detail_list_line"
        android:textColor="@color/text_gray"/>
</RelativeLayout>
