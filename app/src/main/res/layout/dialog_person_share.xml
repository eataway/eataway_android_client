<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp" android:background="@drawable/shape_person_share"
    android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
    <TextView
        android:text="@string/person_share_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listLine"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_person_share_friend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_share_friend"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:text="@string/person_share_to_friends"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_person_share_friend"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_person_share_moments"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_share_moments"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:text="@string/person_share_to_moments"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_person_share_moments"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listLine"/>
    <Button
        android:id="@+id/btn_dialog_cancel"
        android:text="@string/person_share_to_cancel"
        android:textSize="16sp"
        android:textColor="#b3b3b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/shape_person_share"/>
</LinearLayout>