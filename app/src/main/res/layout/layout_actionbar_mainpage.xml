<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/actionBar"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/iv_left_main"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/img_main_actionbar_left"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/img_main_actionbar_right"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:id="@+id/rl_search_bar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_main_searchbar"
        android:layout_toLeftOf="@id/iv_right"
        android:layout_toRightOf="@id/iv_left_main"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/im_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/img_main_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/et_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_bar"
            android:textSize="12sp"
            android:textColor="#d9d9d9"
            android:layout_toRightOf="@id/im_search"
            android:layout_centerVertical="true"
            android:background="#fff" />
    </RelativeLayout>
</RelativeLayout>