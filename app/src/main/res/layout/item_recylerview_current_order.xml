<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listLine">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_order_details"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cimg_current_order_shop_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/tv_current_order_shop_name"
                    android:text="shop name"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_item_current_order_middle_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <View
                android:background="@color/listLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:text="@string/order_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_item_current_order_middle_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery_fee"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/tv_item_current_order_middle_distance"
                    android:text="(距离12.5KM)"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_current_order_middle_delivery_fee"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:background="@color/listLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_current_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_waiting_seller"
                    android:textColor="@color/order_red"/>
                <TextView
                    android:id="@+id/tv_item_current_order_middle_total"
                    android:text="total"
                    android:textSize="15sp"
                    android:textColor="@color/order_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:text="@string/zong_ji"
                    android:textColor="@color/text_black"
                    android:layout_toLeftOf="@+id/tv_item_current_order_middle_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_current_order_contact"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/btn_current_order_rebuy"
                    android:background="@drawable/shape_orange"
                    android:text="@string/order_receipt"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_current_contact_us_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_contact_pre"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_current_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_contact_url"
                    android:textColor="@color/btn_green_noraml"
                    android:autoLink="phone"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_current_order_middle_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/img_order_type_ok"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>