<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/civ_pingjia"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/civ_pingjia"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_pingjia_name"
            />
        <RatingBar
            android:isIndicator="true"
            android:id="@+id/rb_pingjia"
            android:layout_below="@id/tv_pingjia_name"
            android:layout_width="wrap_content"
            android:progressDrawable="@drawable/bg_rb"
            android:layout_height="13dp"
            android:numStars="5"
            android:layout_toRightOf="@id/civ_pingjia"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pingjia_time"
            android:textSize="12sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/tv_pingjia_details"/>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_pingjia1"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_pingjia2"/>
    </LinearLayout>
    <TextView
        android:id="@+id/huifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textSize="14sp"
        android:background="@color/list_line"
        android:padding="10dp"/>
</LinearLayout>


