<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listLine"
    android:orientation="vertical">
    <com.australia.administrator.australiandelivery.view.TopBar
        android:id="@+id/tb_submit_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.australia.administrator.australiandelivery.view.TopBar>
    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#7F919B"
            android:padding="10dp">

            <TextView
                android:text="@string/zong_jin_e"
                android:textColor="@color/white"
                android:id="@+id/shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/shoppingPrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shopping_cart"
                android:text="$5.00"
                android:textColor="@color/color_white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/settlement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFA217"
            android:gravity="center"
            android:text="@string/ti_jiao_ding_dan"
            android:textColor="@color/white" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_submit_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_submit_orders"
        android:layout_above="@id/toolBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_period_selector">
                <TextView
                    android:id="@+id/tv_weizhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/location"
                    android:drawableEnd="@mipmap/iv_back_order"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/please_select_ocation" />

                <LinearLayout
                    android:id="@+id/ll_weizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_submit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="name"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_submit_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/tv_submit_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="01234567"
                        android:textColor="@color/text_gray" />
                </LinearLayout>
                <View
                    android:id="@+id/list_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/list_line"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_orders_time"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/iv_back_order"
                    android:drawablePadding="10dp"
                    android:drawableStart="@mipmap/time"
                    android:gravity="center_vertical"
                    android:text="@string/the_delivery_time"
                    android:layout_below="@id/list_line"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_period_selector"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/iv_orders_shop"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_orders_shop_name"
                        android:textColor="@color/text_black"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/listLine"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_orders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:text="@string/delivery"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_black"
                        android:id="@+id/tv_orders_delivery"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_orders_delivery"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_orders_dress"
                        android:textSize="12sp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/list_line"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_orders_money"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="$0"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/zong_ji"
                        android:layout_toLeftOf="@id/tv_orders_money"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_period_selector"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_black"
                        android:text="@string/taste_notes"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp" />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_orders_taste_notes"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:gravity="center"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/list_line" />
                <RelativeLayout
                    android:id="@+id/rl_orders_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_black"
                        android:text="@string/method_of_payment"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:drawableRight="@mipmap/iv_back_order"
                        android:drawablePadding="10dp"
                        android:id="@+id/tv_orders_method_of_payment"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>