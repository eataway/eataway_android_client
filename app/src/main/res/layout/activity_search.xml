<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PageBackgroud"
    tools:context="com.australia.administrator.australiandelivery.activity.SearchActivity"
    android:paddingTop="10dp">
    <RelativeLayout
        android:id="@+id/search_activity_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_main_searchbar"
        android:padding="10dp">
        <ImageView
            android:id="@+id/im_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/img_main_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_cancel_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_cancel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/et_search_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_bar"
            android:textColor="#d9d9d9"
            android:textSize="15sp"
            android:layout_toRightOf="@id/im_search"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_toLeftOf="@id/tv_cancel_search"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_activity_search_bar"
        android:layout_marginTop="5dp"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
