<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/listItem_marginLeftAndRight"
    android:layout_marginRight="@dimen/listItem_marginLeftAndRight"
    android:paddingBottom="@dimen/listItem_marginBottom">
    <LinearLayout
        android:id="@+id/ll_reslist_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@drawable/shape_white"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_main_res_icon"
                android:layout_width="@dimen/listLine_vertical_height"
                android:layout_height="@dimen/listLine_vertical_height"
                android:background="@drawable/img_res_icon_demo"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"/>
            <View
                android:id="@+id/line_vertical"
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="@dimen/listLine_vertical_height"
                android:background="@color/listLine"
                android:layout_toRightOf="@id/iv_main_res_icon"
                android:layout_marginRight="@dimen/listLine_vertical_marginRight"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:id="@+id/tv_main_res_label_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line_vertical"
                android:text="lable01"
                android:layout_marginRight="@dimen/lable_marginRight"/>
            <TextView
                android:singleLine="true"
                android:visibility="gone"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:id="@+id/tv_main_res_label_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_main_res_label_01"
                android:text="lable02"
                android:layout_marginRight="@dimen/lable_marginRight"/>
            <TextView
                android:singleLine="true"
                android:visibility="gone"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:id="@+id/tv_main_res_label_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_main_res_label_02"
                android:text="lable03"
                android:layout_marginRight="@dimen/lable_marginRight"/>
            <View
                android:id="@+id/line_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="@color/listLine"
                android:layout_below="@id/iv_main_res_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_main_res_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_res_img_demo" />
            <ImageView
                android:background="@drawable/bg_main_res_shadow"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:singleLine="true"

                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxWidth="150dp"
                android:id="@+id/tv_res_main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="res_name"
                android:textColor="#fff"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:id="@+id/tv_res_main_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="res_distance"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_shape"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@drawable/shape_white_gray"
        android:padding="10dp"
        android:visibility="gone">

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_main_res_tag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_main_res_tag_on"
        android:layout_alignParentRight="true"/>

</RelativeLayout>