<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.australia.administrator.australiandelivery.activity.CurrentOrderActivity">
    <com.australia.administrator.australiandelivery.view.TopBar
        android:id="@+id/tp_current_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_current_order_none"
        android:layout_below="@id/tp_current_order"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/mei_ding_dan"/>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_current_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tp_current_order"
        android:background="@color/listLine">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
